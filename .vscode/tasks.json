{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Konstrux.sln",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Konstrux.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Konstrux.sln",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Konstrux.sln"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}